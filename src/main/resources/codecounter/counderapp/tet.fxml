<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="codecounter.counderapp.AppPrimaryController">

    <!-- 主容器 -->
    <VBox minHeight="400.0" minWidth="600.0" prefHeight="400" prefWidth="600" spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

        <!-- 标题 -->
        <Label prefHeight="40.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="代码统计工具" />

        <!-- 文件选择区域 -->
        <HBox prefHeight="30.0" spacing="10">
            <Label text="文件路径：" />
            <TextField fx:id="filePathField" promptText="请输入或选择文件路径" HBox.hgrow="ALWAYS" />
            <Button fx:id="browseButton" onAction="#onBrowseButtonClick" text="浏览" />
        </HBox>

      <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="300.0" prefWidth="600.0" style="-fx-box-border: transparent;" styleClass="no-border-split-pane">
        <items>
              <!-- 统计结果展示区域 -->
              <VBox spacing="10">
                  <Label text="统计结果：" />
                  <TextArea fx:id="resultArea" editable="false" prefHeight="200" wrapText="true" />
              </VBox>
      
              <!-- 代码文件列表 -->
              <VBox spacing="10">
                  <Label text="代码文件列表：" />
                  <ListView fx:id="fileListView" prefHeight="100" />
              </VBox>


        </items>
      </SplitPane>

        <!-- 操作按钮区域 -->
        <HBox alignment="CENTER_RIGHT" prefHeight="30.0" spacing="10">
            <Button fx:id="startButton" onAction="#onStartButtonClick" text="开始统计" />
            <Button fx:id="clearButton" onAction="#onClearButtonClick" text="清空" />
        </HBox>

    </VBox>

    <style>
        .no-border-split-pane {
            -fx-box-border: transparent;
        }
    </style>

</AnchorPane>
